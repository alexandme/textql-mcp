# Example environment variables for textql-mcp
# Copy this file to .env and adjust values as needed

# Logging
LOG_LEVEL=INFO

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=spanner-graph-sa-key.json

# Feature Flags (optional - override config file settings)
# Use TEXTQL_FF_ prefix for all feature flags
# Values should be true/false, 1/0, yes/no, or on/off

# Core functionality
TEXTQL_FF_ENABLE_QUERY_GRAPH=true
TEXTQL_FF_ENABLE_SCHEMA_FETCH=true
TEXTQL_FF_ENABLE_NATURAL_LANGUAGE=false

# Admin and management
TEXTQL_FF_ENABLE_ADMIN_ENDPOINTS=false
TEXTQL_FF_ENABLE_FLAG_RUNTIME_UPDATES=false

# Security and access control
TEXTQL_FF_ENABLE_AUTH_CHECKS=false
TEXTQL_FF_ENABLE_RATE_LIMITING=false

# Experimental features
TEXTQL_FF_ENABLE_EXPERIMENTAL_FEATURES=false